/* pages/Forbes/Forbes.wxss */

.bar-img {
    width: 750rpx;
}

.header-img {
    width: 750rpx;
    height: 350rpx;
}

.content {
    margin: 20rpx 10rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
}

.info {
    position: relative;
}

.info-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    margin:0 20rpx 20rpx 20rpx;
}

.marsk {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    margin:0 20rpx 20rpx 20rpx;
    position: absolute;
    background: rgba(0, 0, 0, 0.3);
    z-index: 9999;
}

.info-txt {
    position: absolute;
    color: #fff;
    font-size: 24rpx;
    margin:20rpx 20rpx 20rpx 40rpx;
}

